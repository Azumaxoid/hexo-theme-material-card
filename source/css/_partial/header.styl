// optimization done

.borderradius .branding .circle 
  border-radius 70px

header[role="banner"]
  ul, ol, dl
    list-style none
    ul, ol, dl
        list-style disc
        margin-left 20px

  .about
    font-size 12px

.menu-navigation-container
  padding 0 0 10px
nav 
  padding 24px 0 24px
  border-bottom 1px solid #ececec
  box-shadow 0 5px 8px -5px rgba(0, 0, 0, 0.075)

  ul 
    font-size .75em
    line-height 1.5em

  li
    display inline
    margin 0
    a 
      font-weight bold
      color rgba(0, 0, 0, 0.25)

    &:after
      content "/";
      margin 0 4px 0 8px
      color rgba(0, 0, 0, 0.15)
      font-weight normal

    &:last-child:after
      content ""
      margin 0
      font-weight normal

    &:first-child
      padding-left 10px

.branding
  display flex
  img
    width 56px
    height auto
    max-width 100%
    margin 0 10px 10px 0
  .title
    margin 0 0 10px 0
    font-weight bold
    line-height: 56px

#toggle 
  display none

.widget .title
  font-size 12px
  padding-bottom 10px
